                break;
            case 3://wish
                $data = (new WishHelper())->getPublishDaily($accountIds);
                break;
            case 4://aliexpress
                $data = (new ExpressHelper())->aliexpressPublishDaily($accountIds);
                break;
            case 5://cd
                $data = [];
                break;
            case 6://lazada
                $data = [];
                break;
            case 7://joom
                $data = (new JoomService())->getPublishDaily($accountIds);
                break;
            case 8://mymall
                $data = (new PandaoService())->getPublishDaily($accountIds);
                break;
            case 9://shopee
