                    'status' => 1,
                    'sales_status' => 1,
                    'platform' => self::PLATFORM_ID,
                    'platform_old' => '[]',
                    'warehouse_id' => $warehouseId,
                    'developer_id' => self::DEFAULT_DEVELOPER,
