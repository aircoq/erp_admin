<?php

namespace service\brandslink;

use think\Exception;

class BrandslinkApi
{
    private static $config = [];
    private static $instance = null;
    private static $object = [];

    /** 开放接口
     * @param array $config
     * @return null|WishApi
     * @throws Exception
     */
    public static function instance($config)
    {
        if (is_object($config)) {
            $config = $config->toArray();
        }
        self::$instance = new BrandslinkApi;
        self::$config = $config;
        return self::$instance;
    }

    /** 执行
     * @param $type
     * @return mixed
     * @throws Exception
     */
    public function loader($type)
    {
        return self::handler($type);
    }

    /** 实例
     * @param $type
     * @return mixed
     * @throws Exception
     */
    public static function handler($type)
    {
        try {
            $class = false !== strpos($type, '\\') ? $type : '\\service\\brandslink\\operation\\' . ucwords($type);
            if ($class) {
                self::$object[$type] = new $class(self::$config);
                return self::$object[$type];
            } else {
                throw new Exception("The api type file is not found", 1);
            }
        } catch (Exception $e) {
            throw new Exception("Error Processing Request", 1);
        }
    }

    /** 资源配置
     * @param array $config
     */
    public function config(array $config)
    {
        array_merge(self::$config, $config);
    }
}